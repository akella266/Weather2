<?xml version="1.0" encoding="utf-8"?>
<by.intervale.akella266.weather2.views.main.ScrollChildSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".views.main.MainFragment">

            <TextView
                android:id="@+id/text_view_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/favorite"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text_size"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_no_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@android:color/black"
            android:visibility="gone"/>
    </RelativeLayout>

</by.intervale.akella266.weather2.views.main.ScrollChildSwipeRefreshLayout>